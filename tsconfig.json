{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"types": ["solid-js"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
