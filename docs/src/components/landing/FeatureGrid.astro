---
import Section from "./Section.astro";

const features = [
	{
		title: "Composable Architecture",
		description:
			"Components are building blocks, not black boxes. Each piece does one thing well and composes naturally with others. No prop drilling nightmares or wrapper hell — just straightforward patterns that scale from prototype to production.",
		icon: `<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect width="7" height="7" x="3" y="3" rx="1"/><rect width="7" height="7" x="14" y="3" rx="1"/><rect width="7" height="7" x="14" y="14" rx="1"/><rect width="7" height="7" x="3" y="14" rx="1"/></svg>`,
	},
	{
		title: "CSS-First Theming",
		description:
			"Styling lives in CSS where it belongs. OKLCH color tokens provide perceptually uniform colors that automatically adapt to dark mode. Override any token to make it yours — no build step required, no runtime overhead.",
		icon: `<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="13.5" cy="6.5" r="0.5" fill="currentColor"/><circle cx="17.5" cy="10.5" r="0.5" fill="currentColor"/><circle cx="8.5" cy="7.5" r="0.5" fill="currentColor"/><circle cx="6.5" cy="12.5" r="0.5" fill="currentColor"/><path d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10c.926 0 1.648-.746 1.648-1.688 0-.437-.18-.835-.437-1.125-.29-.289-.438-.652-.438-1.125a1.64 1.64 0 0 1 1.668-1.668h1.996c3.051 0 5.555-2.503 5.555-5.555C21.965 6.012 17.461 2 12 2z"/></svg>`,
	},
	{
		title: "Border-First Design",
		description:
			"Heavy backgrounds and loud colors fight for attention. Borders create structure without visual noise. Every component uses subtle 1px borders to define hierarchy, letting your content breathe and your interface feel cohesive.",
		icon: `<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2"/></svg>`,
	},
	{
		title: "Zero Runtime Cost",
		description:
			"No CSS-in-JS runtime. No context providers wrapping your app. Just static CSS and lightweight SolidJS components that compile away. Your bundle stays small and your app stays fast — exactly how it should be.",
		icon: `<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M13 2 3 14h9l-1 8 10-12h-9l1-8z"/></svg>`,
	},
];
---

<Section title="Why @f0rbit/ui?" bordered>
  <div class="feature-grid">
    {features.map((feature) => (
      <div class="feature-card">
        <div class="row">
          <div class="feature-card-icon" set:html={feature.icon} />
          <h3 class="feature-card-title">{feature.title}</h3>
        </div>
        <p class="feature-card-description">{feature.description}</p>
      </div>
    ))}
  </div>
</Section>

<style>
  .feature-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-md);
  }

  .feature-card {
    padding: var(--space-md);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
  }

  .feature-card-icon {
    color: var(--fg-muted);
    margin-bottom: var(--space-sm);
    line-height: 0;
  }

  .feature-card-title {
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--fg);
    margin: 0 0 var(--space-xs) 0;
  }

  .feature-card-description {
    font-size: var(--text-sm);
    line-height: var(--text-sm-lh);
    color: var(--fg-muted);
    margin: 0;
  }

  @media (max-width: 600px) {
    .feature-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
