---
// Hero Section - Variation B: Centered with Badge Strip
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
---

<section class="hero">
  <div class="dot-grid" aria-hidden="true"></div>
  <div class="hero-content">
    <div class="badge-row">
      {["SolidJS", "v0.1.0", "MIT License"].map((text, i) => (
        <span class="badge" style={`--badge-index: ${i}`}>{text}</span>
      ))}
    </div>

    <h1 class="hero-title">
      {"@f0rbit/ui".split("").map((char, i) => (
        <span class="hero-char" style={`--char-index: ${i}`}>{char}</span>
      ))}
    </h1>

    <p class="hero-description">
      A minimal, composable UI component library for SolidJS
    </p>

    <div class="hero-buttons">
      <a href={`${base}getting-started/installation`} class="btn btn-primary">Get Started</a>
      <a href="https://github.com/f0rbit/ui" class="btn btn-secondary">
        GitHub
      </a>
    </div>

    <div class="hero-stats">
      <div class="hero-stat">
        <div class="hero-stat-value" data-count-to="15" data-suffix="+">15+</div>
        <div class="hero-stat-label">Components</div>
      </div>
      <div class="hero-stat">
        <div class="hero-stat-value" data-fade-in>OKLCH</div>
        <div class="hero-stat-label">Colors</div>
      </div>
      <div class="hero-stat">
        <div class="hero-stat-value" data-fade-in>Zero</div>
        <div class="hero-stat-label">Runtime Deps</div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    padding: 12rem var(--space-lg);
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
  }

  .dot-grid {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
    mask-image: radial-gradient(ellipse 70% 50% at 50% 50%, black 20%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse 70% 50% at 50% 50%, black 20%, transparent 70%);
  }

  .dot-grid::before {
    content: "";
    position: absolute;
    inset: -50%;
    width: 200%;
    height: 200%;
    background-image: radial-gradient(circle at center, var(--border) 1.5px, transparent 1.5px);
    background-size: 32px 32px;
    opacity: 0.5;
    animation: dot-wave 25s linear infinite;
  }

  @keyframes dot-wave {
    0% {
      transform: translate(0, 0);
    }
    100% {
      transform: translate(32px, 32px);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .dot-grid::before {
      animation: none;
    }

    .hero-char {
      opacity: 1;
      transform: none;
      animation: none;
    }

    .badge {
      animation: none;
    }
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
  }

  .badge-row {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    justify-content: center;
    margin-bottom: var(--space-lg);
  }

  .badge {
    animation: badge-float 3.5s ease-in-out infinite;
    animation-delay: calc(var(--badge-index) * 0.4s);
  }

  @keyframes badge-float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-3px);
    }
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--fg);
    margin: 0 0 var(--space-sm) 0;
    text-align: center;
  }

  .hero-char {
    display: inline-block;
    opacity: 0;
    transform: translateY(0.3em);
    animation: char-reveal 0.4s ease-out forwards;
    animation-delay: calc(var(--char-index) * 50ms);
  }

  @keyframes char-reveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-description {
    font-size: var(--text-lg);
    color: var(--fg-muted);
    margin: 0 0 var(--space-lg) 0;
    text-align: center;
    max-width: 500px;
  }

  .hero-buttons {
    display: flex;
    gap: var(--space-sm);
    justify-content: center;
    margin-bottom: var(--space-xl);
  }

  .hero-stats {
    display: flex;
    gap: var(--space-xl);
    justify-content: center;
    padding-top: var(--space-lg);
    border-top: 1px solid var(--border);
    width: 100%;
  }

  .hero-stat {
    text-align: center;
  }

  .hero-stat-value {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--fg);
  }

  .hero-stat-value[data-count-to],
  .hero-stat-value[data-fade-in] {
    opacity: 0;
    transform: translateY(0.5em);
    transition: opacity 0.4s ease-out, transform 0.4s ease-out;
  }

  .hero-stat-value[data-count-to].animated,
  .hero-stat-value[data-fade-in].animated {
    opacity: 1;
    transform: translateY(0);
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-stat-value[data-count-to],
    .hero-stat-value[data-fade-in] {
      opacity: 1;
      transform: none;
      transition: none;
    }
  }

  .hero-stat-label {
    font-size: var(--text-sm);
    color: var(--fg-muted);
  }

  @media (max-width: 600px) {
    .hero-title {
      font-size: 2rem;
    }

    .hero-stats {
      gap: var(--space-lg);
    }

    .hero-buttons {
      flex-direction: column;
      width: 100%;
    }

    .hero-buttons .btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>
