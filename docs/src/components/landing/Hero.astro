---
// Hero Section - Variation B: Centered with Badge Strip
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
---

<section class="hero">
  <div class="hero-content">
    <div class="badge-row">
      <span class="badge">SolidJS</span>
      <span class="badge">v0.1.0</span>
      <span class="badge">MIT License</span>
    </div>

    <h1 class="hero-title">@f0rbit/ui</h1>

    <p class="hero-description">
      A minimal, composable UI component library for SolidJS
    </p>

    <div class="hero-buttons">
      <a href={`${base}getting-started/installation`} class="btn btn-primary">Get Started</a>
      <a href="https://github.com/f0rbit/ui" class="btn btn-secondary">
        GitHub
      </a>
    </div>

    <div class="hero-stats">
      <div class="hero-stat">
        <div class="hero-stat-value">15+</div>
        <div class="hero-stat-label">Components</div>
      </div>
      <div class="hero-stat">
        <div class="hero-stat-value">OKLCH</div>
        <div class="hero-stat-label">Colors</div>
      </div>
      <div class="hero-stat">
        <div class="hero-stat-value">Zero</div>
        <div class="hero-stat-label">Runtime Deps</div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    padding: 12rem var(--space-lg);
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
  }

  .badge-row {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    justify-content: center;
    margin-bottom: var(--space-lg);
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--fg);
    margin: 0 0 var(--space-sm) 0;
    text-align: center;
  }

  .hero-description {
    font-size: var(--text-lg);
    color: var(--fg-muted);
    margin: 0 0 var(--space-lg) 0;
    text-align: center;
    max-width: 500px;
  }

  .hero-buttons {
    display: flex;
    gap: var(--space-sm);
    justify-content: center;
    margin-bottom: var(--space-xl);
  }

  .hero-stats {
    display: flex;
    gap: var(--space-xl);
    justify-content: center;
    padding-top: var(--space-lg);
    border-top: 1px solid var(--border);
    width: 100%;
  }

  .hero-stat {
    text-align: center;
  }

  .hero-stat-value {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--fg);
  }

  .hero-stat-label {
    font-size: var(--text-sm);
    color: var(--fg-muted);
  }

  @media (max-width: 600px) {
    .hero-title {
      font-size: 2rem;
    }

    .hero-stats {
      gap: var(--space-lg);
    }

    .hero-buttons {
      flex-direction: column;
      width: 100%;
    }

    .hero-buttons .btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>
