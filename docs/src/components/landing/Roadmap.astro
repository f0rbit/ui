---
import Section from './Section.astro';

const upcoming = [
  {
    title: "Table Component",
    description: "Sortable, filterable data tables with virtual scrolling."
  },
  {
    title: "Toast Notifications",
    description: "Non-blocking alerts with auto-dismiss and action support."
  },
  {
    title: "Date Picker",
    description: "Calendar-based date selection with range support."
  },
  {
    title: "Tabs Component",
    description: "Accessible tabbed interfaces with lazy loading."
  }
];

const planned = [
  "Command Palette",
  "Tree View",
  "Virtualized List",
  "Form Validation"
];
---

<Section title="Roadmap" bordered>
  <div class="roadmap-content">
    <div class="roadmap-column">
      <h3 class="roadmap-heading">
        <span class="roadmap-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2v4"/><path d="m6.41 6.41-2.83-2.83"/><path d="M2 12h4"/><path d="m6.41 17.59-2.83 2.83"/><path d="M12 18v4"/><path d="m17.59 17.59 2.83 2.83"/><path d="M18 12h4"/><path d="m17.59 6.41 2.83-2.83"/></svg>
        </span>
        In Progress
      </h3>
      <div class="upcoming-list">
        {upcoming.map((item) => (
          <div class="upcoming-item">
            <h4 class="upcoming-title">{item.title}</h4>
            <p class="upcoming-description">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
    <div class="roadmap-column">
      <h3 class="roadmap-heading">
        <span class="roadmap-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
        </span>
        Planned
      </h3>
      <ul class="planned-list">
        {planned.map((item) => (
          <li class="planned-item">{item}</li>
        ))}
      </ul>
    </div>
  </div>
  <p class="roadmap-note">Have a suggestion? <a href="https://github.com/f0rbit/ui/issues" target="_blank" rel="noopener noreferrer">Open an issue</a> on GitHub.</p>
</Section>

<style>
  .roadmap-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--space-lg);
  }

  .roadmap-column {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .roadmap-heading {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--fg);
    margin: 0 0 var(--space-xs) 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .roadmap-icon {
    color: var(--fg-faint);
    display: flex;
  }

  .upcoming-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .upcoming-item {
    padding: var(--space-sm) var(--space-md);
    border: 1px solid var(--border);
    border-radius: var(--radius);
  }

  .upcoming-title {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--fg);
    margin: 0;
  }

  .upcoming-description {
    font-size: var(--text-sm);
    color: var(--fg-muted);
    margin: var(--space-xs) 0 0 0;
  }

  .planned-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .planned-item {
    font-size: var(--text-sm);
    color: var(--fg-muted);
    padding: var(--space-xs) 0;
    padding-left: 0;
    border-bottom: 1px solid var(--border);
  }

  .planned-item:last-child {
    border-bottom: none;
  }

  .planned-item::before {
    content: none;
  }

  .roadmap-note {
    font-size: var(--text-sm);
    color: var(--fg-faint);
    margin: var(--space-md) 0 0 0;
  }

  .roadmap-note a {
    color: var(--accent);
  }

  @media (max-width: 600px) {
    .roadmap-content {
      grid-template-columns: 1fr;
    }
  }
</style>
