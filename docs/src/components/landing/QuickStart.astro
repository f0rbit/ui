---
import Section from './Section.astro';

const steps = [
  {
    title: "Install the package",
    code: "bun add @f0rbit/ui",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/><polyline points="3.29 7 12 12 20.71 7"/><line x1="12" x2="12" y1="22" y2="12"/></svg>`
  },
  {
    title: "Import styles in your app entry",
    code: 'import "@f0rbit/ui/styles.css";',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/><polyline points="14 2 14 8 20 8"/></svg>`
  },
  {
    title: "Use components",
    code: `import { Button, Card } from "@f0rbit/ui";

<Card>
  <Button>Click me</Button>
</Card>`,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/></svg>`
  }
];
---

<Section title="Quick Start" bordered>
  <div class="stepper stepper-vertical">
    {steps.map((step, index) => (
      <div class="step">
        <div class="step-indicator" set:html={step.icon} />
        <div class="step-content">
          <div class="step-title">{step.title}</div>
          <code class="landing-code">{step.code}</code>
        </div>
        {index < steps.length - 1 && <div class="step-connector" />}
      </div>
    ))}
  </div>
</Section>

<style>
  .landing-code {
    display: block;
    background: var(--code-background, var(--bg-alt));
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: var(--space-sm) var(--space-md);
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--fg-muted);
    overflow-x: auto;
    white-space: pre;
    margin-top: var(--space-sm);
    position: relative;
    overflow: hidden;
  }

  .landing-code::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 2px;
    height: 30%;
    background: var(--accent);
    border-radius: 1px;
    animation: scan-border 2.5s ease-in-out infinite;
  }

  @keyframes scan-border {
    0% {
      top: -30%;
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      top: 100%;
      opacity: 0;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .landing-code::before {
      animation: none;
      top: 0;
      height: 100%;
      opacity: 0.6;
    }
  }
</style>
